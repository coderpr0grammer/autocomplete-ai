{
  "manifest_version": 3,
  "name": "Sentence Completion Suggester",
  "version": "1.0",
  "description": "Suggests sentence completions using Azure OpenAI",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
